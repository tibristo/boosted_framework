SRCS+=/Disk/speyside8/lhcb/atlas/tibristo/boosted_framework/Exotics/QjetsPluginRootCore/Root/QjetsPluginRootCore.cxx
SRCDIRQJRC = /Disk/speyside8/lhcb/atlas/tibristo/boosted_framework/Exotics/QjetsPluginRootCore/Root

GARBAGE  = $(OBJDIR)/*.o $(EXEDIR)/$(EXENAME)
