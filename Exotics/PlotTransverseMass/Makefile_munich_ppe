SHELL = /bin/sh
UNAME = $(shell uname)

# Root variables
ROOTCFLAGS   = -L$(ROOTSYS)/lib $(shell root-config --cflags)
ROOTLIBS     = -L$(ROOTSYS)/lib $(shell root-config --libs)
ROOTGLIBS    = -L$(ROOTSYS)/lib $(shell root-config --glibs)

################
##linux
CXX          = g++
RM           = rm -f
AR           = ar cru

##Flags
CXXFLAGS     = -O2 -g -fPIC -funroll-loops -std=c++11 #-Wall 

EXENAME		= PlotsMunichWorkshop
SRCEXT   	= cpp
SRCDIR  	= src
INCDIR   	= include
OBJDIR   	= build
EXEDIR  	= bin
SRCS    	:= src/main.cpp #$(shell find $(SRCDIR) -name '*.$(SRCEXT)')
OBJS    	:= build/main.o #$(patsubst $(SRCDIR)/%.$(SRCEXT),$(OBJDIR)/%.o,$(SRCS))
OBJS+=build/Qjets.o build/QjetsPlugin.o

SRCS+=/Disk/speyside8/lhcb/atlas/tibristo/boosted_framework/Exotics/Qjets/Qjets.C
SRCS+=/Disk/speyside8/lhcb/atlas/tibristo/boosted_framework/Exotics/Qjets/QjetsPlugin.C
SRCDIRQJ = /Disk/speyside8/lhcb/atlas/tibristo/boosted_framework/Exotics/Qjets


GARBAGE  = $(OBJDIR)/*.o $(EXEDIR)/$(EXENAME)
INCDIR+=-I/Disk/speyside8/lhcb/atlas/tibristo/fastjet-install/include
INCDIR+=-I/usr/local/include
INCDIR+=-I/Home/s1214155/usr/local/include

#add qjetsplugin
INCDIR+=-I/Disk/speyside8/lhcb/atlas/tibristo/boosted_framework/Exotics/Qjets/
#################
##Dependencies
# Linux
ifeq "$(UNAME)" "Linux"
RANLIB       = ranlib
CXXFLAGS    += -I$(INCDIR) $(ROOTCFLAGS) #-I$(GSLINC)
LINKFLAGS    = -g $(shell root-config --nonew) $(shell root-config --ldflags) -Wl,--no-as-needed
endif

# OS X
ifeq "$(UNAME)" "Darwin"
RANLIB       = ranlib
CXXFLAGS    += -I$(INCDIR) $(ROOTCFLAGS) `/Disk/speyside8/lhcb/atlas/tibristo/fastjet-install/bin/fastjet-config --cxxflags` 
#
#-I$(GSLINC)
LINKFLAGS    =
endif

##Libraries
LIBS       += $(ROOTLIBS) -lTreePlayer -lThread `/Disk/speyside8/lhcb/atlas/tibristo/fastjet-install/bin/fastjet-config --libs` -L/usr/local/lib -L/Home/s1214155/usr/local/lib -lQjets -lboost_filesystem -lboost_system -lboost_program_options -lboost_regex -L/Disk/speyside8/lhcb/atlas/tibristo/fastjet-install/lib -L./lib

##Targets

FILES = build/Qjets.o build/QjetsPlugin.o

all : lib/libQjets.a $(EXEDIR)/$(EXENAME)


$(EXEDIR)/$(EXENAME) : $(OBJS)
	$(CXX) -o $@ $(OBJS) $(LINKFLAGS) $(LIBS)

$(OBJDIR)/main.o : $(SRCDIR)/main.$(SRCEXT)
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJDIR)/Qjets.o : $(SRCDIRQJ)/Qjets.C
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJDIR)/QjetsPlugin.o : $(SRCDIRQJ)/QjetsPlugin.C
	$(CXX) $(CXXFLAGS) -c $< -o $@



lib/libQjets.a: $(FILES) $(FILES:.cc=.o)
	ar cq lib/libQjets.a $(FILES)

lib/libQjets.so: $(FILES) $(FILES:.cc=.o)
	gcc $(SOFLAGS) -o $@ $(FILES)



clean   :
	$(RM) $(GARBAGE)

cleanall:
	$(RM) $(GARBAGE)


